@model Book

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">

        <h4>
            @Model.Name
            @Model.Author
            <span class="card-text p-1">
                @Model.ShortDescription
            </span>
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>@Model.Price</small>
            </span>
        </h4>

    </div>
    <div class="addToCart text-right">
        
        <p class="button ">
            <a class="btn btn-success" id="cartButton" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-bookId="@Model.BookId">
                Add to cart
            </a>
        </p>
    </div>
</div>